{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Batch Prompt Generation (All Owned)",
			"type": "shell",
			"command": "python",
			"args": [
				"Tools/import_owned_champions.py",
				"--from-owned-list",
				"--trigger-intake"
			],
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "Generate Champion Summaries",
			"type": "shell",
			"command": "python ChampionSummary/generateChampionSummaries.py",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "Setup Environment",
			"type": "shell",
			"command": "python Tools/Setup_Environment.py",
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"presentation": {
				"reveal": "never"
			},
			"problemMatcher": []
		},
		{
			"label": "Validate Champion JSON",
			"type": "shell",
			"command": "python Tools/validate_json.py",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": []
		},
		{
			"label": "First Run: Setup & Activation Instructions",
			"type": "shell",
			"command": "echo To activate the virtual environment, run: .\\.venv\\Scripts\\Activate (Windows) or source .venv/bin/activate (macOS/Linux)",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": [],
			"dependsOn": [
				"Setup Environment"
			],
			"dependsOrder": "sequence"
		},
		{
			"label": "Organize Completed Prompts",
			"type": "shell",
			"command": "if not exist output\\completed_prompts mkdir output\\completed_prompts && move /Y *_prompt.completed.md output\\completed_prompts\\ 2>nul || echo No files to move.",
			"group": "build",
			"presentation": {
				"reveal": "always"
			},
			"problemMatcher": [],
			"detail": "Moves all *_prompt.completed.md files to output/completed_prompts/"
		},
		{
			"label": "Organize Completed Prompts",
			"type": "shell",
			"command": "if not exist output\\completed_prompts mkdir output\\completed_prompts && move /Y *_prompt.completed.md output\\completed_prompts\\ 2>nul || echo No files to move.",
			"problemMatcher": [],
			"group": "build"
		}
	],
	"inputs": [
		{
			"id": "ChampName",
			"type": "promptString",
			"description": "Enter the champion name",
			"default": "Brogni"
		},
		{
			"id": "Rarity",
			"type": "promptString",
			"description": "Enter rarity (6/Mythic, 5/Legendary, 4/Epic, 3/Rare)",
			"default": "5"
		}
	]
}