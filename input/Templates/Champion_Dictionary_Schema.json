{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Champion Dictionary Entry",
  "type": "object",
  "required": ["name", "rarity", "affinity", "faction", "role", "forms"],
  "properties": {
    "name": { "type": "string" },
    "rarity": { "type": "string" },
    "affinity": { "type": "string" },
    "faction": { "type": "string" },
    "role": { "type": "string" },
    "owned": { 
      "type": "integer",
      "minimum": 0,
      "description": "Number of copies owned (0 = not owned, 1+ = owned count). Set by --owned flag in champion_scraper."
    },
    "draft": { "type": "boolean" },
    "meta_ratings": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },
    "forms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["form_name", "base_stats", "skills"],
        "properties": {
          "form_name": { "type": "string" },
          "base_stats": {
            "type": "object",
            "properties": {
              "HP": { "type": ["number", "string"] },
              "ATK": { "type": ["number", "string"] },
              "DEF": { "type": ["number", "string"] },
              "SPD": { "type": ["number", "string"] },
              "C.RATE": { "type": ["number", "string"] },
              "C.DMG": { "type": ["number", "string"] },
              "RES": { "type": ["number", "string"] },
              "ACC": { "type": ["number", "string"] }
            },
            "required": ["HP","ATK","DEF","SPD","C.RATE","C.DMG","RES","ACC"]
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name","type","description","effects","cooldown_booked"],
              "properties": {
                "name": { "type": "string" },
                "type": { "type": "string" },
                "description": { "type": "string" },
                "effects": {
                  "type": ["array", "null"],
                  "items": {
                    "type": "object",
                    "properties": {
                      "type": { "type": "string" },
                      "stat": { "type": ["string", "null"] },
                      "value": {
                        "oneOf": [
                          { "type": ["number", "null"] }
                        ]
                      },
                      "per_hit": { "type": "boolean" },
                      "target": { "type": "string" },
                      "duration": { "type": ["integer", "string", "null"] },
                      "notes": { "type": "string" }
                    },
                    "required": ["type"]
                  }
                },
                "cooldown_booked": { "type": ["integer","null"] },
                "mechanics_tags": { "type": "array" },
                "book_value": { "type": "string" },
                "notes": { "type": "string" }
              }
            }
          },
          "aura": { "type": ["string","null"] },
          "comments": { "type": "string" }
        }
      }
    },
    "mechanics_tags": { "type": "array" },
    "stat_priorities": { "type": "array" },
    "stat_priority_recommendations": { "type": "object" },
    "recommended_gear": { "type": "array" },
    "masteries": { "type": "object" },
    "blessings": { "type": "array" },
    "ai_quirks": { "type": "object" },
    "cheese_strategy": { "type": "object" },
    "mechanics_advisory": { "type": "string" },
    "validation_metadata": {
      "type": "object",
      "required": ["stat_confidence", "data_sources", "source_priority"],
      "properties": {
        "stat_confidence": { 
          "type": "number",
          "minimum": 0,
          "maximum": 100
        },
        "data_sources": { "type": "string" },
        "source_priority": {
          "type": "object",
          "required": ["stats", "skills", "info"],
          "properties": {
            "stats": { 
              "type": "string",
              "enum": ["fandom", "ayumilove_ocr", "hellhades", "raidwiki", "none"]
            },
            "skills": { 
              "type": "string",
              "enum": ["ayumilove", "hellhades", "none"]
            },
            "info": { 
              "type": "string",
              "enum": ["fandom", "ayumilove", "hellhades", "raidwiki", "none"]
            }
          }
        },
        "ocr_notes": { "type": "string" }
      }
    },
    "citations": { "type": "array" },
    "update_notes": { "type": "object" },
    "author": { "type": "string" },
    "comments": { "type": "string" }
  }
}
